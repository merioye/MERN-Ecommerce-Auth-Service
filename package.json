{
  "name": "ecommerce-auth-service",
  "version": "0.0.1",
  "description": "Auth service of ecommerce microservices application.",
  "author": "Umair Saleem",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=debuging nest start --debug --watch",
    "start:prod": "pm2 start ecosystem.config.json --no-daemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:band": "jest --runInBand",
    "test:watchBand": "jest --watchAll --runInBand",
    "test:ci": "jest --ci",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "migration:generate": "cross-env NODE_ENV=%npm_config_env% typeorm migration:generate ./src/migrations/%npm_config_name%",
    "migration:create": "cross-env NODE_ENV=%npm_config_env% typeorm migration:create ./src/migrations/%npm_config_name%",
    "migration:run": "cross-env NODE_ENV=%npm_config_env% typeorm migration:run -d ./dist/config/data-source.js",
    "migration:revert": "cross-env NODE_ENV=%npm_config_env% typeorm migration:revert -d ./dist/config/data-source.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.14",
    "@nestjs/typeorm": "^10.0.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "rsa-pem-to-jwk": "^1.1.3",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^2.0.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  }
}
