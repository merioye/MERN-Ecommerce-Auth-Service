{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@types/node", "jest"],
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    ".eslintrc.js",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__",
    "**/__mocks__",
    "**/test-setup.ts"
  ],
  "exclude": ["node_modules"]
}
